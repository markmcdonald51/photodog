= simple_form_for(@attachment) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.input :altitude
    = f.input :latitude
    = f.input :longitude
    = f.input :image_views
    = f.input :photo_taken_time
    = f.input :url
    = f.input :description
    = f.association :device
    = f.association :user
    = f.association :attachable
    = f.input :type

  .form-actions
    = f.button :submit
